<body class="shows-center">
    <div class="container_show_index"> 

      <div class="left-header">

            <h11>TVShows Listing</h11>
      </div>

        <div class="right-header">
       
            <%= link_to 'Search For TV Shows', shows_search_path, :class => "btn btn-outline-warning" %>
          </div>

          <div class="row-search">
              <form class="form-inline">
              <%= form_tag(shows_path, :method => "get") do %>
                <%= text_field_tag :a, "", placeholder: "Page no...", class: "form-control mr-sm-2" %>
                <%= submit_tag("Go", :class => "btn btn-outline-warning my-2 my-sm-0") %>
              <% end %>
              </form>
          </div>
   

        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Title</th>
              <th scope="col">Summary</th>
              <th scope="col">Image</th>
              <th scope="col">Genre</th>
              <th scope="col">Network</th>
              <th scope="col">Air Day</th>
              <th scope="col">Air Time</th>
              <th scope="col">Official Website</th>
              <th scope="col">Rating</th>
              <th scope="col">Status</th>
              <th colspan="3"></th>
            </tr>
          </thead>
         
          <tbody>
            <% @shows.each do |show| %>
              <tr>

                <td scope="row"><%= show["id"] %></td>
                <td><%= show["name"] %></td>
                <td><%= show["summary"] %></td>
                <td><% if show["image"] == nil %>
                    <%= %>
                    <% else %>
                    <%= image_tag show["image"]["medium"] %>
                    <% end %>
                </td>
                <td><%= show["genres"] %></td>
                <td>
                  <% if show["network"] == nil %>
                    <%= %>
                      <% else %>
                        <%= show["network"]["name"] %>
                  <% end %>
                </td>

                <td>
                  <% if show["schedule"] == nil %>
                    <%= %>
                      <% else %>
                        <%= show["schedule"]["days"] %>
                  <% end %>  
                </td> 
                <td>
                  <% if show["schedule"] == nil %>
                    <%= %>
                      <% else %>
                        <%= show["schedule"]["time"] %>
                  <% end %>  
                </td> 

                <td>
                  <% if show["officialSite"] == nil %>
                    <%= %>
                      <% else %>
                        <%= link_to "Link", show["officialSite"] %>
                  <% end %>  
                </td>

                <td>
                  <% if show["rating"] == nil %>
                    <%= %>
                      <% else %>
                        <%= show["rating"]["average"] %>
                  <% end %>  
                </td>

                <td>
                  <% if show["status"] == nil %>
                    <%= %>
                      <% else %>
                        <%= show["status"] %>
                  <% end %>  
                </td>

                <td><%= link_to "Show", show %></td>
                <td><%= link_to "Destroy", show, method: :delete, data: { confirm: "Are you sure?" } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</body>
