<h1>TVShows Listing</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Summary</th>
      <th>Image</th>
      <th>Genre</th>
      <th>Network</th>
      <th>Air Day</th>
      <th>Air Time</th>
      <th>Official Website</th>
      <th>Rating</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show["show"]["id"] %></td>
        <td><%= show["show"]["name"] %></td>
        <td><%= show["show"]["summary"] %></td>
        <td><%= show["show"]["genres"] %></td>
        <td><%= show["show"]["network"]["country"]["name"] %></td>
        <td><%= show["show"]["schedule"]["days"] %></td>
        <td><%= show["show"]["schedule"]["time"] %></td>
        <td><%= show["show"]["url"] %></td>
        <td><%= show["show"]["rating"]["average"] %></td>
        <td><%= show["show"]["status"] %></td>
        <td><%= link_to "Show", show %></td>
        <td><%= link_to "Destroy", show, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>